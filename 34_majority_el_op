#include<bits/stdc++.h>

int majorityElement(std::vector<int> arr) {
    int el;
    int cnt = 0;
    for (int i = 0; i < arr.size(); i++)
    {
        if (cnt == 0) {
            el = arr[i];
            cnt = 1;
        } else if (el == arr[i]) {
            cnt++;
        } else {
            cnt--;
        }        
    }

    int cnt1 = 0;
    for (int i = 0; i < arr.size(); i++)
    {
        if (arr[i] == el) {
            cnt1++;
        }
    }
    if (cnt1 > arr.size() / 2) {
        return el;
    }
    
    return -1;
}

int main() {
    std::vector<int> arr = {3, 3, 4, 2, 4, 4, 2, 4, 4};
    int result = majorityElement(arr);
    if (result != -1) {
        std::cout << "Majority Element: " << result << std::endl;
    } else {
        std::cout << "No Majority Element" << std::endl;
    }
    return 0;
}
